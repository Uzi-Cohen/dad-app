# Fashion Content Studio - Environment Configuration
# This file is an example. Copy to .env and fill in your values.

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/fashion_studio?schema=public"

# Redis (for job queue)
REDIS_URL="redis://localhost:6379"

# AI Providers
REPLICATE_API_TOKEN=your_replicate_token_here
RUNWAY_API_KEY=your_runway_api_key_here
FAL_API_KEY=your_fal_api_key_here

# Authentication
JWT_SECRET=your_very_long_random_secret_here_at_least_32_characters
JWT_EXPIRES_IN=7d

# Storage (local for development, S3 for production)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# For S3:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_BUCKET=fashion-studio-assets

# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# FFmpeg path (leave empty for default)
FFMPEG_PATH=
